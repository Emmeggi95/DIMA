<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorBackground">@color/colorLightBackground</item>
        <item name="colorIconOnBackground">@color/colorTextOnLightBackground</item>
        <item name="colorTextOnBackground">@color/colorTextOnLightBackground</item>
        <item name="colorTextAppBar">@color/colorAppBarText</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:colorBackground">?attr/colorBackground</item>
        <item name="android:colorEdgeEffect">@color/colorSecondary</item>
        
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowSharedElementEnterTransition">@transition/change_image_transform</item>
        <item name="android:windowSharedElementExitTransition">@transition/change_image_transform</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppTheme.NoActionBar.TranslucentStatus">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
        <item name="android:colorPrimaryDark">#000000</item>
        <item name="colorPrimary">#000000</item>
    </style>

    <style name="AppTheme.Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"></style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/colorGrayText</item>
        <item name="android:textColorPrimary">@color/colorGrayText</item>
    </style>

    <!-- Font styles -->

    <style name="Header" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorTextOnLightBackground</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="H3" parent="Header">
        <item name="android:textSize">48sp</item>
    </style>

    <style name="H4" parent="Header">
        <item name="android:textSize">34sp</item>
    </style>

    <style name="H5" parent="Header">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="H6" parent="Header">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Title" parent="Header">
        <item name="android:fontFamily">serif</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Subtitle1" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/varela_round</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorTextOnLightBackground</item>
    </style>

    <style name="Subtitle2" parent="Subtitle1">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorGrayText</item>
    </style>

    <style name="Body1" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorTextOnLightBackground</item>
    </style>

    <style name="Body2" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorGrayText</item>
    </style>

    <style name="BodyNews" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/news_cycle</item>
        <item name="android:textColor">@color/colorTextOnLightBackground</item>
    </style>

    <style name="Link">
        <item name="android:background">@drawable/ripple_effect_text</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <!---->

    <style name="DefaultButtonStyle" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:backgroundTint">@drawable/button_color_selector</item>
        <item name="android:textColor">@color/colorTextOnDarkBackground</item>
    </style>

    <style name="AuthTheme" parent="FirebaseUI">
        <!-- Required for sign-in flow styling -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>

    </style>

</resources>
