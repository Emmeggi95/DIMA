<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorBackground">@color/colorLightBackground</item>
        <item name="colorIconOnBackground">@color/colorTextOnLightBackground</item>
        <item name="colorTextOnBackground">@color/colorTextOnLightBackground</item>
        <item name="colorTextAppBar">@color/colorAppBarText</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:colorBackground">?attr/colorBackground</item>
        <item name="android:colorEdgeEffect">@color/colorSecondary</item>
        
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowSharedElementEnterTransition">@transition/change_image_transform</item>
        <item name="android:windowSharedElementExitTransition">@transition/change_image_transform</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppTheme.NoActionBar.TranslucentStatus">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
        <item name="android:colorPrimaryDark">#000000</item>
        <item name="colorPrimary">#000000</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"></style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">?attr/colorTextAppBar</item>

    </style>

    <style name="AppTheme.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!-- Set proper title size -->
        <item name="android:textSize">@dimen/abc_text_size_title_material_toolbar</item>
        <!-- Set title color -->
        <item name="android:textColor">?attr/colorTextAppBar</item>
    </style>
    
    <style name="HeaderTextTheme" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorTextOnLightBackground</item>
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="BigTextTheme" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorTextOnLightBackground</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
    </style>

    <style name="PrimaryTextTheme" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorTextOnLightBackground</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="SecondaryTextTheme" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:textColor">@color/colorTextOnLightBackground</item>
    </style>

    <style name="LittleTextTheme" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:textColor">@color/colorGrayText</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="LinkTextTheme" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <!-- Collapsing toolbar text appearance-->

    <style name="ExpandedText" parent="android:TextAppearance">
        <item name="android:textColor">@color/colorTextOnDarkBackground</item>
        <item name="android:colorBackground">@color/colorDarkBackground</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="CollapsedText" parent="android:TextAppearance">
        <item name="android:textColor">@color/colorTextOnDarkBackground</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!---->

    <style name="DefaultButtonStyle" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:backgroundTint">@drawable/button_color_selector</item>
        <item name="android:textColor">@color/colorTextOnDarkBackground</item>
    </style>

    <style name="AuthTheme" parent="FirebaseUI">
        <!-- Required for sign-in flow styling -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>

    </style>

</resources>
