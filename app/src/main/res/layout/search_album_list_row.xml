<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/result_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/tall_row"
    android:background="@drawable/ripple_effect">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/album_title_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/screen_background_dark_transparent"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/default_album_title"
            android:textAppearance="@style/Body1"
            android:textColor="@color/colorTextOnDarkBackground" />

        <TextView
            android:id="@+id/album_artist_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@android:drawable/screen_background_dark_transparent"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/artist_default"
            android:textAppearance="@style/Body2"
            android:textColor="@color/colorTextOnDarkBackgroundSecondary" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>