<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/album_activity_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorBackground"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".AlbumActivity"
    tools:showIn="@layout/activity_album">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <TextView
            android:id="@+id/artist_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="startArtistActivity"
            android:text="@string/artist_text_default"
            android:textColor="?attr/colorTextOnBackground"
            android:textSize="@dimen/artist_font_size" />

        <TextView
            android:id="@+id/year_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/artist_text"
            android:text="@string/year_default"
            android:textColor="@color/colorGrayText" />

        <LinearLayout
            android:id="@+id/stars_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/year_text"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/star_1"
                android:layout_width="@dimen/star_dimension"
                android:layout_height="@dimen/star_dimension"
                android:layout_weight="1"
                android:src="@drawable/ic_star_border_24dp"
                android:tint="@color/star_color" />

            <ImageView
                android:id="@+id/star_2"
                android:layout_width="@dimen/star_dimension"
                android:layout_height="@dimen/star_dimension"
                android:layout_weight="1"
                android:src="@drawable/ic_star_border_24dp"
                android:tint="@color/star_color" />

            <ImageView
                android:id="@+id/star_3"
                android:layout_width="@dimen/star_dimension"
                android:layout_height="@dimen/star_dimension"
                android:layout_weight="1"
                android:src="@drawable/ic_star_border_24dp"
                android:tint="@color/star_color" />

            <ImageView
                android:id="@+id/star_4"
                android:layout_width="@dimen/star_dimension"
                android:layout_height="@dimen/star_dimension"
                android:layout_weight="1"
                android:src="@drawable/ic_star_border_24dp"
                android:tint="@color/star_color" />

            <ImageView
                android:id="@+id/star_5"
                android:layout_width="@dimen/star_dimension"
                android:layout_height="@dimen/star_dimension"
                android:layout_weight="1"
                android:src="@drawable/ic_star_border_24dp"
                android:tint="@color/star_color" />

            <TextView
                android:id="@+id/text_rating"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="@string/default_rating"
                android:textColor="@color/colorGrayText"
                android:textSize="@dimen/card_text_size" />
        </LinearLayout>

        <View
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/stars_container"
            android:layout_marginTop="@dimen/layout_margin"
            android:layout_marginBottom="@dimen/layout_margin"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/not_found_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider1"
            android:text="@string/not_found_text"
            android:textSize="@dimen/review_text_font_size" />

        <LinearLayout
            android:id="@+id/featured_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/not_found_text"
            android:orientation="vertical">

            <android.support.design.widget.CoordinatorLayout
                android:id="@+id/title_and_rating"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/review_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/review_title_default"
                    android:textAppearance="@style/HeaderTextTheme" />

                <LinearLayout
                    android:id="@+id/review_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:orientation="horizontal"
                    app:layout_anchorGravity="right">

                    <ImageView
                        android:id="@+id/review_star"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:tint="@color/star_color"
                        app:srcCompat="@drawable/ic_star_24dp" />

                    <TextView
                        android:id="@+id/review_rating_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:text="@string/default_rating"
                        android:textColor="@color/colorGrayText"
                        android:textSize="@dimen/card_text_size" />
                </LinearLayout>
            </android.support.design.widget.CoordinatorLayout>

            <TextView
                android:id="@+id/review_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/PrimaryTextTheme" />

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/review_by"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/review_by_text"
                    android:textAppearance="@style/SecondaryTextTheme"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/review_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/review_author_default"
                    android:textAppearance="@style/PrimaryTextTheme"
                    android:textStyle="italic"
                    app:layout_constraintStart_toEndOf="@+id/review_by"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/review_date"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:text="@string/review_date_default"
                    android:textAlignment="textEnd"
                    android:textAppearance="@style/SecondaryTextTheme"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </android.support.constraint.ConstraintLayout>

            <android.support.design.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
                <Button
                    android:id="@+id/review_like_button"
                    style="@style/DefaultButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/like_button_text"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/review_edit_button"
                    style="@style/DefaultButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Edit"
                    android:visibility="gone"/>

    </LinearLayout>

                <LinearLayout
                    android:id="@+id/likes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/heart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:paddingRight="4dp"
                        android:tint="@android:color/holo_red_dark"
                        app:srcCompat="@drawable/ic_favorite_border_black_24dp" />

                    <TextView
                        android:id="@+id/likes_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="0" />
                </LinearLayout>


            </android.support.design.widget.CoordinatorLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/reviews_buttons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/featured_review"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/write_review_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/write_review_button"
                    style="@style/DefaultButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/new_review_button"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/all_reviews_container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/all_reviews_button"
                    style="@style/DefaultButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="startReviewsActivity"
                    android:text="@string/all_reviews_button" />
            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>