<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/review_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_margin"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:id="@+id/card_spacer"
                android:layout_width="24dp"
                android:layout_height="@dimen/album_cover_side"
                android:layout_alignParentLeft="false"
                android:layout_alignParentRight="true"
                android:alpha="0"
                app:cardElevation="0dp">

            </android.support.v7.widget.CardView>

            <ImageView
                android:id="@+id/card_review_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/card_spacer"
                android:layout_alignParentEnd="false"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="false"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginRight="8dp"
                app:srcCompat="@drawable/ic_keyboard_arrow_down_black_24dp" />

            <LinearLayout
                android:id="@+id/info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:layout_toLeftOf="@+id/card_spacer"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/card_review_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/review_title_default"
                    android:textAppearance="@style/HeaderTextTheme" />

                <TextView
                    android:id="@+id/card_review_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/review_author_default"
                    android:textAppearance="@style/LinkTextTheme" />

                <TextView
                    android:id="@+id/card_review_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/review_date_default"
                    android:textAppearance="@style/LittleTextTheme" />

                <TextView
                    android:id="@+id/card_review_likes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/review_default_likes"
                    android:textAppearance="@style/LittleTextTheme" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/card_review_body_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_spacer"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/card_review_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:padding="@dimen/layout_margin"
                    android:textAppearance="@style/SecondaryTextTheme" />

                <LinearLayout
                    android:id="@+id/card_review_like"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/card_review_heart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:paddingRight="4dp"
                        android:tint="@android:color/holo_red_dark"
                        app:srcCompat="@drawable/ic_favorite_border_black_24dp" />

                    <TextView
                        android:id="@+id/card_review_like_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="@string/like"
                        android:textAppearance="@style/LittleTextTheme"
                        android:textColor="@android:color/holo_red_dark" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>